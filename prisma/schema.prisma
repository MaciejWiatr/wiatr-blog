generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model reaction {
  id        String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  userId    String
  articleId String
  reaction  String
}

model views {
  id        String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  articleId String
}

model email {
  id      String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email   String
  created DateTime @default(now())
}
